black=$(tput -Txterm setaf 0)
red=$(tput -Txterm setaf 1)
green=$(tput -Txterm setaf 2)
yellow=$(tput -Txterm setaf 3)
dk_blue=$(tput -Txterm setaf 4)
pink=$(tput -Txterm setaf 5)
lt_blue=$(tput -Txterm setaf 6)
 
bold=$(tput -Txterm bold)
reset=$(tput -Txterm sgr0)
 
arr_smiley_color=("$green" "$red")
arr_smiley_status=(":)" ":(")

remote_user='\n\[$bold\]\[$black\][\@]-[\[$green\]\u\[$red\]@\H\[$black\]]-[\[$blue\]\w\[$black\]]\[$reset\]\n\[${arr_smiley_color[$?>0]}\]${arr_smiley_status[$?>0]} \[$reset\]\$ '
remote_root='\n\[$bold\]\[$black\][\@]-[\[$red\]\u@\H\[$black\]]-[\[$blue\]\w\[$black\]]\[$reset\]\n\[${arr_smiley_color[$?>0]}\]${arr_smiley_status[$?>0]} \[$reset\]\$ '
